<!DOCTYPE html>
<html>
  <head>
    <title>首页</title>
    <%-include('head',{})%>
  </head>
  <body>
    <%-include('bar',{username:data.username})%>

    <div class="list">
				<%data.list.map(function(ele,index){%>
					<div class="row">
          <span><%=index+1%></span>
          <span><%=ele.username%></span>
          <span><a href="/detail?id=<%=ele._id%>"><%=ele.title%></a></span>
          <span><%=ele.newsetTime%></span>
          <span>
          	<%if(ele.username == data.username){%>
          		<a href="/write?id=<%=ele._id%>">编辑</a>
            	<a href="/articles/delete?id=<%=ele._id%>">删除</a>
          	<%}%>
            
          </span>
        </div>
				<%})%>
        

      <div class="pages">
      	<%for(var i=1; i<=data.total; i++){%>
      		<a href="/?page=<%=i%>"><%=i%></a>
      	<%}%>
          
         
      </div>

    </div>
  </body>
</html>
